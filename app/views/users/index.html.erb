<p id="notice"><%= notice %></p>
<div class="container">
<div class="col-sm-12">
<div class="bs-calltoaction bs-calltoaction-default">
  <div class="row">
    <div class="col-md-11 cta-contents">
        <div class="panel-heading">          
          <table class="table table-user-information">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellidos</th>                
                <th>Telefono</th>
                <th>Email</th>
                <th>Password</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th>Empresa</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.Nombre %></td>
                  <td><%= user.Apellidos %></td>                  
                  <td><%= user.Telefono %></td>
                  <td><%= user.email %></td>
                  <td><%= user.password_digest %></td>
                  <td><%= user.tipo %></td>                  
                  <% if user.Activo %>
                    <td>Si</td>
                  <% else %>
                    <td>No</td>
                  <% end %>
                  <td><%= Company.find(user.companies_id).Nombre %></td>                  
                  <td><%= link_to 'Editar', edit_user_path(user), class: "btn btn-default btn-x" %></td>
                  <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-x" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
        </div>
      </div>
    </div>
</div>