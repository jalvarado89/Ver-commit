<p id="notice"><%= notice %></p>
<div class="container">
<div class="col-sm-12">
    <div class="bs-calltoaction bs-calltoaction-default">
  <div class="row">
    <div class="col-md-8 cta-contents">
        <div class="panel-heading">          
              <table class="table table-user-information">
                <thead>
                  <tr>      
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Naviera</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @cliente_navieras.each do |cliente_naviera| %>
                    <tr>        
                      <td class="col-sm-2"><%= cliente_naviera.Nombre %></td>
                      <td class="col-sm-2"><%= cliente_naviera.Telefono %></td>
                      <td class="col-sm-2"><%= cliente_naviera.Correo %></td>
                      <td class="col-sm-2"><%= Naviera.find(cliente_naviera.navieras_id).Nombre %></td>
                      <td><%= link_to 'Mostrar', cliente_naviera, class: "btn btn-default btn-x"%></td>
                      <td><%= link_to 'Editar', edit_cliente_naviera_path(cliente_naviera), class: "btn btn-default btn-x" %></td>
                      <td><%= link_to "Eliminar", cliente_naviera, method: :delete, data: {confirm: "Esta Seguro ?"}, class: "btn btn-default btn-x" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
</div>