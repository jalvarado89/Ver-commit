<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-sm-12">
    <div class="bs-calltoaction bs-calltoaction-default">
      <div class="row">
        <div class="col-md-8 cta-contents">
          <div class="panel-heading">          
            <table class="table table-user-information">
              <thead>
                <tr>      
                  <th>Nombre</th>
                  <th>Telefono</th>
                  <th>Correo</th>
                  <th>Direccion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @companies.each do |company| %>
                <tr>        
                  <td class="col-sm-2"><%= company.Nombre %></td>
                  <td class="col-sm-2"><%= company.Telefono %></td>
                  <td class="col-sm-2"><%= company.Correo %></td>
                  <td class="col-sm-2"><%= company.Direccion %></td>
                  <td><%= link_to 'Mostrar', company, class: "btn btn-default btn-x" %></td>
                  <td><%= link_to 'Editar', edit_company_path(company), class: "btn btn-default btn-x" %></td>
                  <td><%= link_to "Eliminar", company, method: :delete, data: {confirm: "Esta Seguro ?"}, class: "btn btn-default btn-x" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>