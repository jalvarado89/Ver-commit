<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-sm-12">
    <div class="bs-calltoaction bs-calltoaction-default">
      <div class="row">
        <div class="col-md-12 cta-contents">
          <div class="panel-heading">          
            <table class="table table-user-information">
              <thead>
                <tr>
                  <th>Nombre</th>                    
                  <th>Precio Empresa 2 ejes</th>
                  <th>Precio Empresa 3 ejes</th>
                  <th>Precio Chofer</th>
                  <th>Empresa</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @routes.each do |route| %>
                <tr>
                  <td class="col-sm-2"><%= route.Nombre %></td>
                  <td class="col-sm-2"><%= route.Precio_Empresa_2Ejes %></td>
                  <td class="col-sm-2"><%= route.Precio_Empresa_3Ejes %></td>
                  <td class="col-sm-2"><%= route.Precio_Chofer %></td>
                  <td class="col-sm-2"><%= Company.where(id: route.companies_id).Nombre %></td>
                  <td><%= link_to 'Mostrar', route, class: "btn btn-default btn-x" %></td>
                  <td><%= link_to 'Editar', edit_route_path(route), class: "btn btn-default btn-x" %></td>
                  <td><%= link_to 'Eliminar', route, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-x" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>