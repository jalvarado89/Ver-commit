<p id="notice"><%= notice %></p>

<div class="container">
  <% @contenedors.each do |contenedor| %>
  <div class="col-sm-12">
    <div class="bs-calltoaction bs-calltoaction-primary">
      <div class="row">        
        <div class="col-md-9 cta-contents">
          <div class="cta-desc">            
            <table class="table table-user-information">
              <thead>
                <tr>                  
                  <td><h5> Sigla: </h5></td>
                  <td><h5> Numero: </h5></td>
                  <td><h5> Marchamo:</h5></td>
                  <td><h5> Temperatura: </h5></td>
                  <td><h5> Cant ejes: </h5></td>
                  <td><h5> Activo: </h5></td>
                </tr>
              </thead>
              <tbody>
                <tr>            
                  <td class="col-sm-2">
                    <%= contenedor.Sigla %>
                  </td>
                  <td class="col-sm-3">
                    <%= contenedor.Numero %>
                  </td>
                  <td class="col-sm-3">
                    <%= contenedor.Marchamo%>
                  </td>
                  <td class="col-sm-2">
                    <%= contenedor.Temperatura %>          
                  </td>
                  <td class="col-sm-3">
                    <%= contenedor.Cant_Ejes %>
                  </td>
                  <td class="col-sm-3">
                    <%= contenedor.Activo %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>       
      </div>
    </div>
  </div>
  <label class="hidden"> <%= @var = contenedor.asignations_id %></label>
  <label class="hidden"> <%= @cod = contenedor.id %></label>  
  <% end %>
</div>


<div class="container">
   <%= form_for(@retiro, url: retiros_path) do |o| %>
   <table id="myTable" class=" table order-list">
      <thead>
        <tr>
          <td>Chofer</td>
          <td>Camion</td>
          <td>Implemento</td>          
        </tr>
      </thead>
      <tbody>
         <tr>
          <td class="col-sm-1">
            <%= o.collection_select(:drivers_id, Driver.all, :id, :Nombre, prompt: true) %>
          </td>
          <td class="col-sm-2">
            <%= o.collection_select(:trucks_id, Truck.all, :id, :Placa, prompt: true) %>
          </td>          
          <td class="col-sm-2">
            <%= o.collection_select(:implements_id, Implement.all, :id, :Num_Chasis, prompt: true) %>
          </td>
          
          <%= o.hidden_field(:asignations_id, :value => @valor = Asignation.find(@var).id) %>
          <%= o.hidden_field(:num_contenedors_id, :value => @cod) %>
          <%= o.hidden_field(:fecha, :value => Date.today) %>
          <td class="col-sm-1" colspan="5" style="text-align: left;">
            <%= o.submit "Submit", class: "btn btn-lg btn-block" %>					
          </td>
        </tr>
      </tbody>
  </table>
  <% end %>
</div>

